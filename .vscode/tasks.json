{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build all sources",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "main.c",
                "aluno.c",
                "curso.c",
                "ordenacaoAluno.c",
                "buscaSequencialAluno.c",
                "buscaBinariaAluno.c",
                "-o",
                "${fileDirname}\\main.exe",
                "-fdiagnostics-color=always",
                "-g"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task gerada para compilar todos os fontes."
        }
    ]
}
